<div class="container-fluid">
  <div class="row">

    <div class="col-12">
      <h1>Burgers!</h1>
    </div>

    <!--<div class="col-8">   
      <img class="burger-img" src="..\public\assets\images\cheeseburger.jpg" alt="Angry burger pic" />
    </div> -->
 </div>
 
  <div class="row">
    <div class="col-sm-6 col-md-6">

      <h2>Burgers that are not eaten!</h2>

        <ul>
          {{#each burgers}}
            {{#unless eaten}}
              {{> burgers/burger-block eaten=true}}
            {{/unless}}
          {{/each}}
        </ul>
    </div>

    <div class="col-sm-6 col-md-6">

      <h2>Burgers that are eaten!</h2>

        <ul>
          {{#each burgers}}
            {{#if eaten}}
              {{> burgers/burger-block eaten=false}}
            {{/if}}
          {{/each}}
        </ul>
    </div>
 </div>

  

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Eaten?</label><br>
    <input type="radio" name="eaten" value="1" checked> Eaten!<br>
    <input type="radio" name="eaten" value="0"> Not Eaten
  </div>

  <button type="submit">Add Burger</button>
</form>

</div>

